{% extends 'layout.twig' %}

{% block content %}
  {% for post in posts %}
    <div class="blog-post">
      <a href="{{ 'post' | url }}/{{post.id}}/{{ post.title | replace({' ': '-'}) }}">
        <h2>{{ post.title }}</h2>
      </a>
      <p>Jan 1, 2020 by <a href="#">Alex</a></p>
      {% if post.img_url %}
      <div class="blog-post-image">
        <img class="img-fluid" src="{{ post.img_url }}" alt="">
      </div>
      {% endif %}
      <div class="blog-post-content">
        {{ post.content }}
      </div>
    </div>  
  {% endfor %}
{% endblock %}